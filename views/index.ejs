<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Title Name</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-slate-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full  rounded-md outline-none px-5  py-2 bg-slate-800" type="text" placeholder="Titel" name="titel">
                <textarea class="block w-full rounded-md outline-none mt-2 px-5 py-2 resize-none bg-slate-800" placeholder="write your tast" name="details"></textarea>
                <input class="mt-2 rounded-md px-5 py-2 bg-slate-600" type="submit" value="Create task">
            </form>
        </div>
        <div class="tasts flex gap-3 flex-wrap p-10">
            <% if(files.length>0){ %>
                <% files.forEach(function(val){ %>
                    <div class="tast w-72 rounded-md px-3 py-4 bg-slate-800">
                        <h1 class="text-white rounded-md text-3xl tracking-tighter"><%= val %></h1>
                        <a class="text-blue-500 inline-block mt-3" href="/files/<%= val %>">Read more</a>
                    </div>
                <% }) %>
            <% } else { %>               
                <h3 class="text-white">No text yet</h3>
            <% } %>
            
        </div>
    </div>
</body>
</html>